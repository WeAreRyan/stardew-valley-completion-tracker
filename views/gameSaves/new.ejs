        <input type="checkbox" class="form-check-input" name="crafting">
        <label class="form-check-label" for="crafting">All Items Crafted</label>
      </div>
      <div class="form-check">
        <input type="checkbox" class="form-check-input" name="fish">
        <label class="form-check-label" for="fish">All Fish Caught</label>
      </div>
      <div class="form-check">
        <input type="checkbox" class="form-check-input" name="walnuts">
        <label class="form-check-label" for="walnuts">All Golden Walnuts Collected</label>
      </div>
      <div class="col-auto my-1">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
      </div>
    </form>
